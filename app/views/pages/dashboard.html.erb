<h1>Usuarios</h1>
<br>
<table class="table table-striped table-hover">
		<thead>
			<th>Nombre</th>
			<th>rol</th>
			<th colspan="2"></th>
		</thead>
		<tbody>
			<% @users.order(:name).each do |user| %>
				<tr>
					<td><%= user.name %></td>
					<td><%= user.role %></td>
					<td><%= link_to 'Cambiar Rol', change_path(user.id), method: :patch, data: { confirm: 'Estás seguro que deseas cambiar el rol?' }, class: 'btn btn-sm btn-success' %>
					 <%= link_to 'Eliminar', erase_path(user.id), method: :delete, data: { confirm: 'Estás seguro que deseas eliminar el Usuario?' }, class: 'btn btn-sm btn-danger' %></td>
				</tr>
			<% end %>
		</tbody>
</table>
